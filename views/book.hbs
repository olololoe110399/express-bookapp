{{>sidebar}}
<div class="main-panel">
    {{> nav}}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h4 class="card-title ">Books</h4>
                            <p class="card-category"> Here is a information Books</p>
                            <a href="/admin/book/create" class="btn btn-sm btn-success">Create</a>
                        </div>
                        <div class="card-body">
                            {{>messages}}
                            {{#if data}}
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-info">
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Author
                                        </th>
                                        <th>
                                            Genre
                                        </th>
                                        <th>
                                            Change
                                        </th>
                                    </thead>
                                    <tbody id="myTable">
                                        {{#each data}}
                                        <tr>
                                            <td>
                                                {{title}}
                                            </td>
                                            <td>
                                                {{author.name}}
                                            </td>
                                            <td>
                                                {{#each genre}}
                                                {{name}},
                                                {{/each}}
                                            </td>
                                            <td>
                                                <a href="/admin/book/{{_id}}" class="btn btn-sm btn-info product-edit">Edit</a>
                                                <button id="delete-book" class="btn btn-sm btn-danger" value={{_id}}
                                                    data-toggle="modal" data-target="#confirm-delete">Delete</button>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>

                            {{else}}
                            <p class="text-center">No book found. Go <a href="/admin/book/create">here</a> to add
                                books.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
            {{>modal}}
        </div>
    </div>
    {{> footer}}
</div>