<div class="welcome">
    <div class="page-header clear-filter">
        <div class="page-header-image" style="background-image: url('/images/cover.jpg');"></div>
        <div class="content-center">
            <div class="col-md-6 ml-auto mr-auto">
                <div class="brand">
                    <div class=" card">
                        <div class="card-header card-header-info">
                            <h3 class="card-title text-center"><strong>Sign up</strong></h3>
                        </div>
                        <div class="card-body">
                            <form action="/admin/sign_up" method="post">
                                <div class="form-group">
                                    {{>messages}}
                                </div>
                                <div class="form-group ">
                                    <input type="email" class="form-control" id="email" placeholder="E-mail"
                                        name="email" value="{{email}}" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" value="{{full_name}}" id="full_name" name="full_name"
                                        class="form-control" placeholder="Full Name" required>
                                </div>
                                <div class="form-group ">
                                    <input type="password" class="form-control" id="password" placeholder="Password"
                                        name="password" required>
                                </div>
                                <div class="form-group ">
                                    <input type="password" class="form-control" id="password_confirm"
                                        placeholder="Confirm Password" name="password_confirm" required></div>

                                <!-- Sign in button -->
                                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0"
                                    type="submit">Sign
                                    in</button>

                                <!-- Register -->
                                <p>Already have an account?
                                    <a href="sign_in">Login</a>
                                </p>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
</div>