{{>sidebar}}
<div class="main-panel">
    {{> nav}}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h3 class="card-title ">{{title}}</h3>
                        </div>
                        <div class="card-body">
                            {{>messages}}
                            <form action="{{action}}" method="post">
                                <div class="form-group">
                                    <label for="title" class="bmd-label-floating">Title</label>
                                    <input type="text" class="form-control" value="{{book.title}}" id="title"
                                        name="title" required>
                                </div>
                                <div class="form-group">
                                    <label for="author" class="bmd-label-floating">Author</label>
                                    <select id="author" name="author" class="custom-select custom-select">
                                        {{#each authors}}
                                        {{#if ../book}}
                                        <option value="{{_id}}" {{is_selected ../book.author _id}}>
                                            {{name}}</option>
                                        {{else}}
                                        <option value="{{_id}}">
                                            {{name}}</option>
                                        {{/if}}

                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="summary" class="bmd-label-floating">Summary</label>
                                    <textarea type="text" class="form-control" id="summary" name="summary" cols="40"
                                        rows="5" required>{{book.summary}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="isbn" class="bmd-label-floating">ISBN</label>
                                    <input type="text" class="form-control" value="{{book.isbn}}" id="isbn" name="isbn"
                                        required>
                                </div>
                                <div class="form-group">
                                    <label>Genre</label>
                                    {{#each genres}}
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            {{#if ../book}}
                                            <input id={{_id}} value={{_id}} name="genre" class="form-check-input"
                                                type="checkbox" {{is_checked ../book.genre _id}}>
                                            {{else}}
                                            <input id={{_id}} value={{_id}} name="genre" class="form-check-input"
                                                type="checkbox">
                                            {{/if}}
                                            <span class="form-check-sign">
                                                <span class="check"></span>
                                            </span>
                                            <label>{{name}}</label>
                                        </label>
                                    </div>
                                    {{/each}}
                                </div>
                                <div>
                                    <div class="col-sm">
                                        <button type="submit" class="btn btn-info float-right">{{title_button}}</button>
                                        <a href="/admin/book" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
</div>